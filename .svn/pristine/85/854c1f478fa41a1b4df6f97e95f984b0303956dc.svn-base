@charset "utf-8";

html,body{
	margin: 0;
	width: 100%;
	height: 100%;
	font-family: Helvetica, YouYuan;
}
body{
	background-color: #e4eaf1;
}
.button {
	width: 60px;
	height: 26px;
	border-radius: 5px 5px;
	font-size: 0.8em;
	text-align: center;
	line-height: 27px;
	display: inline-block;
	text-decoration: none;
	float: right;
    margin-top: 15px;
    margin-right: 5px;
}
.btn-red{
	color:#a91f24;
	border:1px solid #a91f24;
}
.btn-blue{
	color:#1674d4;
	border:1px solid #1674d4;
}
.color999{
	color:#999;
}
.hidden{
	display: none;
}
/*header*/
header{
	background-color: white;
	    padding: 0px 8px 1px 12px;
	border-top: 1px solid #ccc;
	border-bottom:1px solid #ccc;
	
}
#headerPic{
	width: 70px;
	height: 70px;
	/* border-radius: 10px; */
	overflow: hidden;
	display: inline-block;
	vertical-align: middle;
}
#headerPic>img{
	width: 100%;
}
#text{
	display: inline-block;
	height: 70px;
	line-height: 26px;
	vertical-align: middle;
	padding-top: 15px;
	padding-left: 8px;
}
#text>p{
	margin: 0;
	padding:1px;
}
#nickname{
	font-size: 1.28em;
}
#codePic{
	display: inline-block;
	    float: right;
    margin: 24px 11px;
}
#codePic>img{
	cursor: pointer;
	height:34px;
	width:34px;
}

/*content*/
.focusList{
	color:#c36a00;
	border-bottom:2px solid #d38600;
}
#btnList{
	border-top: 1px solid #ccc;
	border-bottom:1px solid #ccc;
	background-color: white;
	margin:15px 0px;
}
#btnList>div{
	width:48%;
	display:inline-block;
	text-align: center;
}
#btnList>div>label{
	display: inline-block;
	width: 100px;
    line-height: 34px;
    height: 34px;
    position: relative;
    top: 1px;
}
.region{
	margin-top: 15px;
	background-color: white;
	margin-left: 8px;
    margin-right: 8px;
}
#hotGame,#hotActive{
	height:36px
}
#hotGame>img,#hotActive>img{
	position: relative;
    top: 5px;
    left: -5px;
}
.row{
	background-color: white;
	padding: 10px 0px;
    margin: 0px 6px;
    border-top: 1px solid #ccc;
}
.gamePic{
	width: 60px;
	height: 60px;
	border-radius: 4px;
	overflow: hidden;
	display: inline-block;
	vertical-align: middle;
}
.gamePic>img{
	width: 100%;
}
.gameText{
	display: inline-block;
	height: 60px;
	vertical-align: middle;
	max-width:160px;
	}
.gameText>p{
	margin: 0;
	/* padding: 1px; */
	margin-left:5px;
	line-height:32px;
	overflow: hidden;
}
#listLine{
	width: 1px !important;
    height: 30px;
    line-height: 30px;
    background-color: #ccc;
    vertical-align: middle;
}
.introduce{
	color: #666;
    font-size: 0.7em;
    line-height: 13px !important;
    height: 26px;
}
.introduce:after{
	content:"...";
}